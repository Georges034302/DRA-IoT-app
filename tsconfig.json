{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react", // or "react-jsx" for React 17+
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
